---
import BaseLayout from '@/layouts/BaseLayout.astro';
---
<BaseLayout title="COX Camera - Choose Language">
  <div class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="fixed inset-0 bg-cover bg-center z-0" style="background-image: url('/assets/products/landing/landing-1.jpg');"></div>

    <!-- Overlay Content -->
    <div class="relative z-10 text-center text-white p-4 bg-black bg-opacity-50 rounded-lg">
      <h1 class="text-5xl font-bold mb-4">
        <img src="/assets/products/logo/COX LOGO.png" alt="COX Camera Logo" class="h-16 mx-auto" />
      </h1>
      <p class="text-xl mb-6">Choose your language</p>
      <div class="flex gap-4 justify-center">
        <a href="/ko" class="px-6 py-3 rounded-full bg-primary text-on-primary font-semibold shadow-lg hover:shadow-xl transition-shadow duration-300">한국어</a>
        <a href="/en" class="px-6 py-3 rounded-full border border-white text-white font-semibold shadow-lg hover:shadow-xl transition-shadow duration-300">English</a>
      </div>
    </div>
  </div>
</BaseLayout>