---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
const all = await getCollection('solutions', s => s.data.lang === 'en');
const solutions = all.sort((a,b) => (a.data.order ?? 999) - (b.data.order ?? 999));
---
<BaseLayout title="Solutions">
  <h1 class="text-2xl font-bold mb-6">Solutions</h1>
  <ul class="space-y-4">
    {solutions.map(({ slug, data }) => (
      <li>
        <a href={`/en/solutions/${slug}`} class="block p-4 rounded-lg border hover:bg-neutral-50">
          <h3 class="font-semibold">{data.title}</h3>
          <p class="text-sm text-neutral-600">{data.shortDesc}</p>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>